  <!-- script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script -->
  <style>
    .help-block.error {
      margin-bottom: 5px;
    }
  </style>
</head>

<body>

  <header class="header">
    <div class="logo">
      <img src="https://www.ipn.mx/assets/files/main/img/template/pleca-ipn.png" alt="img">
    </div>
    <div class="titulo">
      <h1>Sistema de información del posgrado en Física Educativa</h1>
    </div>

    <div class="logo">
      <img src="https://www.cicata.ipn.mx/assets/files/cicata/assets/uploads/Logo_CICATA_TF2.png" alt="img">
    </div>

</header>

<nav class="barra-navegacion">
  <div>
      <ul>
          <li><a href="#">Inicio</a></li>
          <li><a href="#">Conocenos</a></li>
          <li><a href="#">Investigacion</a></li>
      </ul>
  </div>
</nav>

  <div class="login-page">
    <div class="form">

      <form id="rf" class="register-form" novalidate>
        <div class="hijo1">
          <div class="titulo">  
            <nav><h1>Artículos de congreso</h1> </nav>
          </div>
          
            <div class="datos, cajitaDato">
              <label class="control-label" for="titulo">Título del artículo*</label>
              <input id="titulo" type="text" placeholder="titulo" name="titulo" value="<%=producto.titulo%>"/>
              <div class="messages"></div>
            </div>
            <div class="datos, cajitaDato">
              <label class="control-label" for="nombre">Nombre del congreso*</label>
             <!-- <textarea name="nombre" id="nombre" cols="30" rows="3" placeholder="nombre" required></textarea>-->
              <input id="nombre" type="text" placeholder="nombre" name="nombre" value="<%=producto.nombre%>" />
              <div class="messages"></div>
            </div>
        
        
            <div class="datos, cajitaDato">
              <label class="control-label"for="fecha">Fecha del evento*</label>
              <input id="fecha" type="date" placeholder="fecha" name="fecha" value="<%=producto.fechaEvento%>" />
              <div class="messages"></div>
              </div>
        

        
              <div class="datos, cajitaDato">
        
                <label class="control-label" for="autor">Seleccione un campo</label>
                <select id="autor" name="autor"  value="<%=producto.tipoAutor%>">
                  <option value="0">Seleccione una opción</option>
                  <option value="1">Autor Principal</option>
                  <option value="2">Coautor</option>
           
                </select>
                <div class="messages"></div>
              </div>

              <div class="datos, cajitaDato">
        
                <label class="control-label" for="tema" >¿Esta asociado a tu tema de tesis?*</label>
                <select id="tema" name="tema"  value="<%=producto.asociado%>">
                  <option value="0">Seleccione una opción</option>
                  <option value="1">Si</option>
                  <option value="2">No</option>
           
                </select>
                <div class="messages"></div>
              </div>
          </div>

          <div class="">
            <button type="submit">Guardar</button>
          </div>
      </form>
    </div>
  </div>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.3/underscore-min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.10.6/moment.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/validate.js/0.13.1/validate.min.js"></script>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

  <script src="/js/validarF5.js"></script>
  <script src="/js/validarF4.js"></script>
  <script src="/js/validarF3.js"></script>
  <script src="/js/validarF2.js"></script>
  <script src="/js/validarF1.js"></script>
  <script src="/js/funciones.js"></script>
</body>

</html>
