  <div class="login-page">
    <div class="form">

      
      <form id="df" class="register-form" method="POST" action="/modificarlibro" novalidate>
        <div class="hijo1">
          <!--<div class="hijo1">-->

            <div class="titulo">  
              <nav><h1>Libro</h1> 
              </nav>
            </div>
    
            <div class="datos, cajitaDato">
              <label class="control-label" for="titulo">Título del libro*</label>
              <input name="titulo"type="text" placeholder="Título del libro" readonly="readonly" value="<%=producto.titulo%>" />
              <div class="messages"></div>
            </div>
            
            <div class="datos, cajitaDato">
              <label class="control-label" for="editorial">Editorial del libro*</label>
              <input name="editorial"type="text" placeholder="Editorial"  value="<%=producto.editorial%>" />
              <div class="messages"></div>
            </div>

            <div class="datos, cajitaDato">
              <label class="control-label" for="edicion">Edición de libro*</label>
              <input name="edicion" type="text" placeholder="Edición"  value="<%=producto.edicion%>" />
              <div class="messages"></div>
            </div>
          
            <div class="datos, cajitaDato">
              <label class="control-label" for="año">Año de publicación*</label>
              <select name ="año"type="text" required >
                <option value="0">Seleccione</option>
                <option value="2020">2020</option>
                <option value="2019">2019</option>
                <option value="2018">2018</option>
                <option value="2017">2017</option>
                <option value="2016">2016</option>
                <option value="2015">2015</option>
                <option value="2014">2014</option>
                <option value="2013">2013</option>
                <option value="2012">2012</option>
                <option value="2011">2011</option>
                <option value="2010">2010</option>
                <option value="2009">2009</option>
                <option value="2008">2008</option>
                <option value="2007">2007</option>
                <option value="2006">2006</option>
                <option value="2005">2005</option>
                <option value="2004">2004</option>
                <option value="2003">2003</option>
                <option value="2002">2002</option>
                <option value="2001">2001</option>
                <option value="2000">2000</option>
                <option value="1999">1999</option>
                <option value="1998">1998</option>
                <option value="1997">1997</option>
                <option value="1996">1996</option>
                <option value="1995">1995</option>
                <option value="1994">1994</option>
                <option value="1993">1993</option>
                <option value="1992">1992</option>
                <option value="1991">1991</option>
                <option value="1990">1990</option>
                <option value="1989">1989</option>
                <option value="1988">1988</option>
                <option value="1987">1987</option>
                <option value="1986">1986</option>
                <option value="1985">1985</option>
                <option value="1984">1984</option>
                <option value="1983">1983</option>
                <option value="1982">1982</option>
                <option value="1981">1981</option>
                <option value="1980">1980</option>
              </select>
              <div class="messages"></div>
            </div>
          
            <div class="datos, cajitaDato">
              <label class="control-label" for="isbn">ISBN del libro*</label>
              <input name="isbn"type="text" placeholder="ISBN"  value="<%=producto.ISBN%>" />
              <div class="messages"></div>
            </div>
    
            
            <div class="datos, cajitaDato">
              <label class="control-label" for="autor">Seleccione una opción</label>
              <select name="autor">
                <option value="<%=producto.tipoAutor%>"><%=producto.tipoAutor%> </option>
                
                <%if(producto.tipoAutor == 'Coautor'){%>
                  <option value="Autor Principal"> Autor Principal</option>
                  <%}else{%>
                    
                    <option value="Coautor"> Coautor</option>
                  <%}%>
              
              </select>
              <div class="messages"></div>
            </div>
  


            <div class="datos, cajitaDato">
              <label class="control-label" for="tema">¿Esta asociado a tu tema de tesis?*</label>
              <select name="tema"  >
                <option value="<%=producto.asociado%>"><%=producto.asociado%> </option>
                
                <%if(producto.asociado == 'No'){%>
                  <option value="Si"> Si</option>
                  <%}else{%>
                    
                    <option value="No"> No</option>
                  <%}%>
                  
              </select>
              <div class="messages"></div>
              </div>

              <div class="datos, cajitaDato">
              <label class="control-label" for="url">URL del repositorio donde consultar*</label>
              <input name ="url"type="text" placeholder="URL del repositorio donde consultar"  value="<%=producto.URL%>" />
              <div class="messages"></div>
            </div>
          </div>  
            <div class="">
              <button type="submit" id="boton4">Actualizar</button>
            </div>


      </form>
 
    </div>
